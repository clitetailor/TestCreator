<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root maxWidth="-Infinity" prefWidth="600.0" styleClass="form" stylesheets="@MaterialDesign.css" type="VBox" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox prefWidth="200.0" spacing="10.0">
         <children>
            <VBox prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="title" text="Subject" />
                  <ComboBox prefWidth="150.0" styleClass="input" />
               </children>
            </VBox>
            <VBox prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="title" text="Level" />
                  <ComboBox prefWidth="150.0" styleClass="input" />
               </children>
            </VBox>
            <VBox alignment="BOTTOM_CENTER" layoutX="266.0" layoutY="10.0">
               <children>
                <Button mnemonicParsing="false" onAction="#onSearchButtonClick" text="Search">
                     <styleClass>
                        <String fx:value="materialButton" />
                        <String fx:value="primary" />
                     </styleClass>
                  </Button>
               </children>
            </VBox>
            <VBox alignment="BOTTOM_CENTER" layoutX="468.0" layoutY="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onClearButtonClick" styleClass="materialButton" text="Clear" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</fx:root>
