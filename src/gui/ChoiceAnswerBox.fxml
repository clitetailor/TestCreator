<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root prefHeight="0.0" prefWidth="404.0" stylesheets="@MaterialDesign.css" type="VBox" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_RIGHT" prefHeight="38.0" prefWidth="404.0" styleClass="contextTool" stylesheets="@MaterialDesign.css">
         <children>
            <Button fx:id="trueFalseButton" mnemonicParsing="false" onAction="#onTagButtonClick" styleClass="tag" text="true" />
            <Button mnemonicParsing="false" onAction="#onDeleteButtonClick" styleClass="contextButton">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@assets/close.png" />
                     </image>
                     <viewport>
                        <Rectangle2D height="24.0" width="24.0" />
                     </viewport>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
      <TextArea fx:id="answerTextArea" prefHeight="14.0" prefWidth="404.0" styleClass="input" />
   </children>
</fx:root>
